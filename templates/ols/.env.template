# OpenLiteSpeed Site Configuration Template
# Copy this file to .env and fill in your values

# Site identification
SITE_NAME=mysite
DOMAIN=example.com

# WordPress Database Configuration
DB_NAME=wp_mysite
DB_USER=wp_user
DB_PASSWORD=ChangeMeToSecurePassword123!
DB_HOST=mysql

# OpenLiteSpeed Admin Configuration
LSWS_ADMIN_USER=admin
LSWS_ADMIN_PASS=ChangeMeToSecureAdminPassword!
ADMIN_PORT=7080

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_MAXMEMORY=256mb

# SSL/TLS Configuration
TLS_MODE=internal

# Optional: WWW Redirect
WWW_REDIRECT=false

# Optional: Email for Let's Encrypt
ADMIN_EMAIL=admin@${DOMAIN}

# phpMyAdmin Configuration
PMA_SUBDOMAIN=pma.${DOMAIN}
PMA_BASIC_AUTH=true
PMA_AUTH_USER=admin
# Generate hash using: htpasswd -nbB admin password
PMA_AUTH_PASS_HASH=

# WordPress Configuration
WORDPRESS_TABLE_PREFIX=wp_
WORDPRESS_DEBUG=false

# Performance Tuning
MEMORY_LIMIT=512M
MAX_UPLOAD_SIZE=128M
MAX_EXECUTION_TIME=300

# LiteSpeed Cache Configuration
LS_OLS_ENABLE_LSCACHE=true
LSCACHE_OBJECT_CACHE=redis

# Security
# Generate these using: https://api.wordpress.org/secret-key/1.1/salt/
WORDPRESS_AUTH_KEY=
WORDPRESS_SECURE_AUTH_KEY=
WORDPRESS_LOGGED_IN_KEY=
WORDPRESS_NONCE_KEY=
WORDPRESS_AUTH_SALT=
WORDPRESS_SECURE_AUTH_SALT=
WORDPRESS_LOGGED_IN_SALT=
WORDPRESS_NONCE_SALT=

# Database Performance
MYSQL_MAX_CONNECTIONS=100
INNODB_BUFFER_POOL_SIZE=512M
INNODB_LOG_FILE_SIZE=128M
QUERY_CACHE_SIZE=32M
