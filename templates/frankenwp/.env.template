# FrankenWP Site Configuration Template
# Copy this file to .env and fill in your values

# Site identification
SITE_NAME=mysite
DOMAIN=example.com

# WordPress Database Configuration
DB_NAME=wp_mysite
DB_USER=wp_user
DB_PASSWORD=ChangeMeToSecurePassword123!
DB_HOST=db

# WordPress Configuration
WORDPRESS_TABLE_PREFIX=wp_
WORDPRESS_DEBUG=false

# FrankenPHP/Caddy Configuration
NUM_WORKERS=2
SERVER_NAME=${DOMAIN}

# SSL/TLS Configuration
# Set to 'internal' for Let's Encrypt auto HTTPS, or provide custom cert paths
TLS_MODE=internal

# Optional: WWW Redirect
# Set to 'true' to redirect www.domain to domain
WWW_REDIRECT=false

# Optional: Email for Let's Encrypt notifications
ADMIN_EMAIL=admin@${DOMAIN}

# Performance Tuning
# Adjust based on server resources
MEMORY_LIMIT=256M
MAX_UPLOAD_SIZE=64M
MAX_EXECUTION_TIME=300

# Security
# Generate these using: https://api.wordpress.org/secret-key/1.1/salt/
WORDPRESS_AUTH_KEY=
WORDPRESS_SECURE_AUTH_KEY=
WORDPRESS_LOGGED_IN_KEY=
WORDPRESS_NONCE_KEY=
WORDPRESS_AUTH_SALT=
WORDPRESS_SECURE_AUTH_SALT=
WORDPRESS_LOGGED_IN_SALT=
WORDPRESS_NONCE_SALT=
