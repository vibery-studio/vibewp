version: '3.8'

services:
  wordpress:
    image: stephenmiracle/frankenwp:latest
    container_name: {{ site_name }}_wp
    environment:
      WORDPRESS_DB_HOST: db
      WORDPRESS_DB_USER: {{ db_user }}
      WORDPRESS_DB_PASSWORD: {{ db_password }}
      WORDPRESS_DB_NAME: {{ db_name }}
      SERVER_NAME: {{ domain }}
      # FrankenPHP/Caddy configuration
      FRANKENPHP_CONFIG: |
        {
          # Enable worker mode for better performance
          worker /var/www/html/frankenphp-worker.php
          # Number of workers
          num_workers {{ num_workers | default(2) }}
        }
    volumes:
      - wp_content:/var/www/html/wp-content
      - wp_config:/var/www/html/wp-config.php:ro
    networks:
      - default
      - proxy
    labels:
      # Caddy proxy configuration
      caddy: {{ domain }}
      caddy.reverse_proxy: "{{ '{{upstreams 80}}' }}"
      # Enable auto HTTPS
      caddy.tls: "internal"
      # Optional: www redirect
      {% if www_redirect %}caddy.redir: "www.{{ domain }} {{ domain }}"{% endif %}
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "php-fpm-healthcheck"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s

  db:
    image: mariadb:10.11
    container_name: {{ site_name }}_db
    environment:
      MYSQL_DATABASE: {{ db_name }}
      MYSQL_USER: {{ db_user }}
      MYSQL_PASSWORD: {{ db_password }}
      MYSQL_RANDOM_ROOT_PASSWORD: '1'
      # Performance tuning
      MYSQL_INITDB_SKIP_TZINFO: '1'
    volumes:
      - db_data:/var/lib/mysql
    networks:
      - default
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "healthcheck.sh", "--connect", "--innodb_initialized"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s
    command: >
      --default-authentication-plugin=mysql_native_password
      --max_connections=100
      --innodb_buffer_pool_size=256M
      --innodb_log_file_size=64M

volumes:
  wp_content:
    name: {{ site_name }}_wp_content
  wp_config:
    name: {{ site_name }}_wp_config
  db_data:
    name: {{ site_name }}_db_data

networks:
  default:
    name: {{ site_name }}_default
  proxy:
    external: true
